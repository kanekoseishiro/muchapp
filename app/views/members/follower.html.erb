<%= render "shared/header"%>

<div class="member-mach-main">
  <div class="member-mach-contents">
    <h2 class='mach-title'>フォロワー一覧</h2>
  </div>
  <ul class='member-lists'>
    <% User.find(params[:id]).followers.each do |follow| %>
      <li class='list'>
        <%= link_to member_path(follow) do %>
          <div class='member-img-content'>
            <%= image_tag follow.image, class: "member-img" %>
          </div>
          <div class='member-info'>
            <%= follow.nickname %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
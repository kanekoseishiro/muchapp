<div class="registration-header">
  <%= link_to "新規登録", root_path, class:"devise_header" %>
</div>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table border="1" class="form-table">
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) 抹茶プリン", maxlength:"40" %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %></td>
        <%# <p class='info-text'>※英字と数字の両方を含めて設定してください</p> %>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">年齢</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.text_field :age, class:"input-default", id:"age", placeholder:"例) 20" %><span>歳</span></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">性別</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.collection_select(:gender, Gender.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %></td>
      </div>
    </tr>
    <tr>
      <th><div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div></th>
      <td><div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div></td>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">趣味</label>
          <span class="form-any">任意</span>
        </div></th>
        <td class="form-content"><%= f.text_field :hobby, class:"input-default", id:"hobby", placeholder:"例) 読書" %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">郵便番号</label>
          <span class="form-any">任意</span>
        </div></th>
        <td class="form-content"><%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.collection_select(:prefecture, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="form-any">任意</span>
        </div></th>
        <td class="form-content"><%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="form-any">任意</span>
        </div></th>
        <td class="form-content"><%= f.text_field :house_number, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div></th>
        <td class="form-content"><%= f.text_field :building_name, class:"input-default", id:"building", placeholder:"例）柳ビル103"%></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <th><div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="indispensable">必須</span>
        </div></th>
        <td class="form-content"><%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%></td>
      </div>
    </tr>
  </table>

  <div class='register-btn'>
    <%= f.submit "新規登録" ,class:"register-red-btn" %>
  </div>
<% end %>

<div class='register-btn'>
  <%= render "devise/shared/links" %>
</div>